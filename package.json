{
  "name": "audioguide",
  "version": "1.0.0",
  "description": "A mobile-first audio guide for exhibitions",
  "scripts": {
    "generate-index": "node scripts/generate_index.js",
    "clean": "rimraf public",
    "copy-assets": "copyfiles -u 0 \"assets/**/*\" public/",
    "copy-fonts": "copyfiles -u 0 \"fonts/**/*\" public/",
    "copy-webfonts": "copyfiles -u 0 \"webfonts/**/*\" public/",
    "copy-artworks": "copyfiles -u 0 \"artworks/**/*\" public/",
    "copy-html": "copyfiles -u 0 \"*.html\" public/",
    "copy-manifest": "copyfiles -u 0 \"manifest.json\" public/",
    "copy-vendor-js": "mkdir -p public/js/vendor && cp -r js/vendor/* public/js/vendor/",
    "minify-js": "node scripts/build.js",
    "minify-css": "node scripts/build-css.js",
    "process-assets": "node scripts/process-html.js",
    "build": "npm run clean && mkdir -p public/js public/css && npm run copy-assets && npm run copy-fonts && npm run copy-webfonts && npm run copy-artworks && npm run copy-html && npm run copy-manifest && npm run copy-vendor-js && npm run minify-js && npm run minify-css && npm run process-assets",
    "serve": "serve public"
  },
  "dependencies": {
    "canvas": "^3.1.0",
    "dotenv": "^16.4.7",
    "js-yaml": "^4.1.0",
    "openai": "^4.83.0"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "cssnano": "^6.0.1",
    "glob": "^8.1.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "rimraf": "^5.0.1",
    "serve": "^14.2.1",
    "terser": "^5.19.2"
  }
}
